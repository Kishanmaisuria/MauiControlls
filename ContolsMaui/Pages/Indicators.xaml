<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContolsMaui.Pages.Indicators"
             Title="Indicators Control"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Frame BackgroundColor="White">
                <ActivityIndicator IsRunning="True" x:Name="ActivityIndicator"/>
            </Frame>
            <Button Text="Activity Indicator" x:Name="INDIAButton" Clicked="INDIAButton_Clicked"/>

            <Frame BackgroundColor="White">
                <ProgressBar Progress="0.5" ProgressColor="red"/>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>